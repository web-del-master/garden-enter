.gallery
    text-align center
    margin-top 83px
    h2
        margin 0 auto 
        width 400px
        color #323232
        font-family font
        font-size 20px
        font-weight 400
        text-transform uppercase
        margin-bottom 50px
    .gallery-wrapper
        margin-top -10px
        display flex
        justify-content space-between
        .gallery-card  
            position relative
            width 360px
            text-align center
            img
                max-width 360px
                max-height 305px
            span
                display inline-block
                position absolute
                width 279px
                height 156px
                background-color #323232
                opacity 0.6
                top 81px 
                left 38px
                z-index 2
            h3
                display inline-block                
                position absolute
                width 285px
                top 107px
                left 37px
                color #ffffff
                font-family font
                font-size 14px
                font-weight 500
                text-transform uppercase 
                z-index 3
            a   
                display inline-block
                position absolute
                bottom 101px
                left 102px
                z-index 4
                border-radius: 4px;
                border: 1px solid #ffffff;
                padding 11px 36px 7px 36px
                color: #ffffff;
                font-family font
                font-size: 12px;
                font-weight: 500;
                line-height: 12px;
                /* Text style for "Посмотреть" */
                letter-spacing: 0.3px;
                text-decoration none
                &:hover
                    border: 1px solid #ffffff;
                    background-color: #ffffff;
                    color: #323232;
    .photo_gallery
        display inline-block
        margin-top 40px
        color #323232
        font-family font
        font-size 12px
        font-weight 500
        line-height 12px
        letter-spacing 0.3px
        padding 7px 30px 8px 28px
        border-radius: 4px;
        border: 1px solid #323232;